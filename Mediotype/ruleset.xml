<?xml version="1.0"?>
<ruleset name="Mediotype" namespace="Mediotype\CodeStandard\PHP">
    <description>Tests conformance to the Mediotype PHP code standard.</description>
    <arg name="extensions" value="php,phtml,graphqls/GraphQL"/>
    <rule ref="../../../magento/magento-coding-standard/Magento2/ruleset.xml"/>
    <rule ref="Squiz.Commenting.FunctionCommentThrowTag"/>

    <rule ref="Mediotype.PHP.FileHeaderSniff">
        <severity>5</severity>
        <type>warning</type>
    </rule>
    <rule ref="Mediotype.PHP.InterceptorSeeAnnotationSniff">
        <severity>5</severity>
        <type>warning</type>
    </rule>
</ruleset>
